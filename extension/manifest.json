{
  "manifest_version": 3,
  "name": "Palsona Twitch Badges",
  "description": "See cute Palsonas not only on stream or in the Discord but in the Twitch chat as well!",
  "version": "1.0",
  "permissions": ["storage", "alarms"],
  "action": { "default_popup": "popup.html", "default_title": "Palsona Twitch Badges Settings" },
  "host_permissions": ["https://*.twitch.tv/*", "https://minawan.me/", "https://storage.googleapis.com/minawan-pics.firebasestorage.app/*"],
  "content_scripts": [
    {
      "matches": ["https://*.twitch.tv/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "48": "assets/Minawan_Purple_48x48.png",
    "128": "assets/Minawan_Purple_128x128.png"
  }
}
